{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"outDir": "dist",
		"paths": {
			"@types/*": [
				"src/@types/*"
			],
			"@/*": [
				"src/*"
			],
			"obsidian-mock": [
				"src/__mocks__/obsidian"
			]
		}
	},
	"exclude": [
		"**/__tests__",
	],
	"include": [
		"**/*.ts"
	]
}